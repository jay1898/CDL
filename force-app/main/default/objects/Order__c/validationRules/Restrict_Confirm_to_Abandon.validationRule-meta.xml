<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Restrict_Confirm_to_Abandon</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(Status__c), ISPICKVAL(Status__c, &apos;Abandoned&apos;), PRIORVALUE(Status__c) = &apos;Confirm&apos;)</errorConditionFormula>
    <errorMessage>You can not change Status From Confirm to Abandoned. .</errorMessage>
</ValidationRule>
